private join(s:stringList)->each(c,s,&);
private shuffle(s:string)->s|shuffle(copy(s,[0..length(s)-1],1));
private shuffle(s:stringList)->{$x%(argMin($x%%1))}(each(perm,each(i,[0..size(s)^2],sortPerm(random(size(s)))),[join(s%perm),trueCount(s%perm = s)]));
private inputs:=['abracadabra', 'seesaw', 'elk', 'grrrrrr', 'up', 'a'];
//*See <a href="http://rosettacode.org/wiki/Best_shuffle">http://rosettacode.org/wiki/Best_shuffle</a>
main->each(i,inputs,printf@('%X11%, %X11%, (%I%)'|shuffle(i)));
