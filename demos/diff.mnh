//*Compare files with paths <code>name1</code> and <code>name2</code>
main(name1:string,name2:string)->
  fileExists(name1) ? fileExists(name2) ?
  print('Comparing <',name1,'\n',
        '  against >',name2) and linesDiff(fileLines(name1),fileLines(name2))
  : print('File "',name2,'" does not exist')
  : print('File "',name1,'" does not exist');

private linesDiff(L1,L2)->
  each(i,[0..max(size(L1),size(L2))-1],and,L1%i==L2%i ? true : print(i+1,'\t< ',L1%i,'\n\t> ',L2%i));
