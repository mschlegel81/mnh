private sumOfDigits(n:int)->n.digits.agg(+);
private isHarshadNumber(n:int)->n mod sumOfDigits(n) = 0;
private harshadGen(start:int)->rangeGenerator(start,start+10000).filter(::isHarshadNumber);

//*See http://rosettacode.org/wiki/Harshad_or_Niven_series
main->begin
  local gen:=harshadGen(1);
  printf("%2d",[1..20].each(i, gen()));
  print("The first Harshad Number >1000 is ",harshadGen(1001)());
end;
