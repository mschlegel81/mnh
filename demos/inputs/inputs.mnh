private ensureFile(path,URL)->fileExists(path) ? path : begin
  writeFile(path,httpGet(URL));
  path;
end;

kjv ->ensureFile(splitFileName(myPath).get("directory")&"/kjv.txt"     ,'http://www.ccel.org/ccel/bible/kjv.txt');
dict->ensureFile(splitFileName(myPath).get("directory")&"/unixdict.txt",'http://www.puzzlers.org/pub/wordlists/unixdict.txt');
