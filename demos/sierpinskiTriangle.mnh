//*Solves the "Sierpinski-Triangle" task from <a href="http://rosettacode.org/wiki/Sierpinski_triangle">RosettaCode</a>
main(recursionDepth:string)->begin
  local n:=softCast(recursionDepth);
  printf('%X%',
    each(i,[2^n-1..0],//each line
      repeat(' ',i)& //skew
      each(j,[0..2^n-1],&,trueCount((i and 2^[n-1..0])>0<(j and 2^[n-1..0]))=0 ? 'A ' : '  ')));
end;

//*For test
main->main('5');
