sum([])->0;
sum(L:numericList)->each(e,L,+);

pure binomWeights(n)->binomWeights([1],n);
binomWeights(L,n>0)->binomWeights(0.5*(0|L+L|0),n-1);
binomWeights(L,n)->each(i,[max(1,size(L)-1)..1],sum(head(L,i)));

approx (n)->each(i,[0..n-1],+,                  {(-1)^i*$x^(2*i+1)/(2*i+1)});
approx2(n)->each(i,[0..n-1],+,binomWeights(n)%i*{(-1)^i*$x^(2*i+1)/(2*i+1)});
exact  :={arctan($x)};


setPlotAutoscale([true,false]) and
setPlotPreserveAspect(true) and
setPlotLogscale([false,false]) and
plot(exact,-1,1,100) and
addPlot(approx(2),-1,1,100) and
addPlot(approx2(2),-1,1,100);
