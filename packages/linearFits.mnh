mean(X)->each(x,X,+)/size(X);

linearFit(X:numericList,Y:numericList)->size(X)=size(Y)
  ? linearFit(mean(X),mean(Y),mean(X*X),mean(X*Y))
  : print('Incompatible list lengths of X and Y. Cannot apply linearFit.');

linearFit(mx,my,mxx,mxy)->(mxx*my-mx*mxy)/(mxx-mx^2)+{$x}*((mxy-mx*my)/(mxx-mx^2));


linearFit([1,2,3],[1,2,3]);
